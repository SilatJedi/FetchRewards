<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#7C581D1D</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="H5">
        <item name="android:fontFamily">@font/knockout_48_featherweight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/faded</item>
    </style>

    <style name="H3">
        <item name="android:fontFamily">@font/knockout_htf68_fullfeatherwt</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">36sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/faded</item>
    </style>

    <style name="Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:fontFamily">@font/knockout_48_featherweight</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_rounded_button_dark_color</item>
    </style>
</resources>